<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Authentification</servlet-name>
        <servlet-class>com.ocpappl.servlets.Authentification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Exportation</servlet-name>
        <servlet-class>com.ocpappl.servlets.Exportation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificationSuppression</servlet-name>
        <servlet-class>com.ocpappl.servlets.ModificationSuppression</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PagePrincipale</servlet-name>
        <servlet-class>com.ocpappl.servlets.PagePrincipale</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueModifier</servlet-name>
        <servlet-class>com.ocpappl.servlets.QueModifier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Creation</servlet-name>
        <servlet-class>com.ocpappl.servlets.Creation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentification</servlet-name>
        <url-pattern>/Authentification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Exportation</servlet-name>
        <url-pattern>/Exportation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificationSuppression</servlet-name>
        <url-pattern>/ModificationSuppression</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagePrincipale</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueModifier</servlet-name>
        <url-pattern>/QueModifier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Creation</servlet-name>
        <url-pattern>/Creation</url-pattern>
    </servlet-mapping>
    
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
    
</web-app>
